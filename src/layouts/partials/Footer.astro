---
import Social from "@/components/Social.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import social from "@/config/social.json";
import { markdownify } from "@/lib/utils/textConverter";

// Base path
const basePath = "/tongxin-website/";

// Helper function to add a trailing slash and include the lang parameter
const buildLocalizedUrl = (url) => {
  const cleanUrl = url.endsWith("/") ? url : `${url}/`;
  return `${basePath}${cleanUrl}`;
};
---

<footer class="section bg-theme-dark">
  <div class="container text-center">
    <!-- footer menu -->
    <ul class="mb-8 space-x-4">
      {menu.footer.map((menu) => (
        <li key={menu.name} class="inline-block">
          <a href={buildLocalizedUrl(menu.url.replace(/^\//, ""))}
            class="p-4 text-white/75 hover:text-white transition-all">
            {menu.name}
          </a>
        </li>
      ))}
    </ul>
    <!-- copyright -->
    <p class="text-white/75">Tongxin Youth Charity 2025</p>
  </div>
</footer>
