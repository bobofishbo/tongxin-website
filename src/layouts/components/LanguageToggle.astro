---
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.url.searchParams.get("lang") || "en";
const targetLang = currentLang === "zh" ? "en" : "zh";
const targetUrl = getRelativeLocaleUrl(targetLang, "");
---

<div class="flex items-center space-x-4">
  <button
    class="text-sm font-medium text-blue-600"
    onclick={`window.location.href = '${getRelativeLocaleUrl("en", "")}'`}
  >
    En
  </button>
  <button
    class="text-sm font-medium text-blue-600"
    onclick={`window.location.href = '${getRelativeLocaleUrl("zh", "")}'`}
