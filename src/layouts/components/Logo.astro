---
import { Image } from "astro:assets";
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/tongxin-website/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 1.3}
        height={logo_height.replace("px", "") * 1.3}
        src={src ? src : logo}
        alt={title}
        style={{
          height: logo_height.replace("px", "")*0.7 + "px",
          width: logo_width.replace("px", "")*0.7 + "px",
        }}
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
